<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Profile Settings</h3>
      </div>
      <div class="panel-body">
        <form action="/update_user/<%= current_user.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_first_name" class="col-sm-3 control-label">
              First Name
            </label>
            <div class="col-sm-9">
              <input type="text" id="first_name" name="first_name" placeholder="First Name" class="form-control" value="<%= current_user.first_name%>">
            </div>
          </div>

          <div class="form-group">
            <label for="user_last_name" class="col-sm-3 control-label">
              Last Name
            </label>
            <div class="col-sm-9">
              <input type="text" id="last_name" name="last_name" placeholder="Last Name" class="form-control" value="<%= current_user.last_name%>">
            </div>
          </div>

          <div class="form-group">
            <label for="user_phone_number" class="col-sm-3 control-label">
              Phone Number
            </label>
            <div class="col-sm-9">
              <input type="text" id="phone_number" name="phone_number" placeholder="Phone Number" class="form-control" value="<%= current_user.phone_number%>">
            </div>
          </div>

          <div class="form-group">
            <label for="user_location" class="col-sm-3 control-label">
              Location
            </label>
            <div class="col-sm-9">
              <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= current_user.location%>">
            </div>
          </div>
          <div class="form-group">
            <label for="user_company" class="col-sm-3 control-label">
              Company
            </label>
            <div class="col-sm-9">
              <input type="text" id="company" name="company" placeholder="Company" class="form-control" value="<%= current_user.company%>">
            </div>
          </div>
          <div class="form-group">
            <label for="user_position" class="col-sm-3 control-label">
              Position
            </label>
            <div class="col-sm-9">
              <input type="text" id="position" name="position" placeholder="Position" class="form-control" value="<%= current_user.position%>">
            </div>
          </div>
          <div class="form-group">
            <label for="user_pic" class="col-sm-3 control-label">
              Picture URL
            </label>
            <div class="col-sm-9">
              <input type="text" id="pic" name="pic" placeholder="Enter pic url" class="form-control" value="<%= current_user.pic_url%>">
            </div>
          </div>
          <div class="form-group">
            <label for="user_networking_status" class="col-sm-3 control-label">
              Networking
            </label>
            <div class="col-sm-9">
                <%if current_user.networking_status%>
                <input type="checkbox" name="networking_status" value="true" checked>
                <% else %>
                <input type="checkbox" name="networking_status" value="true">
                <% end %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Update Profile
              </button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
